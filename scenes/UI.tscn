[sub_resource type="GDScript" id=3]
script/source = "extends Control

onready var scoreLbl = $ColorRect/HBoxContainer/ScoreLbl
onready var deathsLbl = $ColorRect/HBoxContainer/DeathsLbl

func increaseScore() -> void:
	var current = int($ColorRect/HBoxContainer/ScoreLbl.text)
	scoreLbl.text = \"Score: \" + str(current + 1)
	
func increaseDeaths() -> void:
	var current = int($ColorRect/HBoxContainer/DeathsLbl.text)
	deathsLbl.text = \"Deaths: \" + str(current + 1)
	
func resetCounts() -> void:
	deathsLbl.text = \"Deaths: \" + str(0)
	scoreLbl.text = \"Score: \" + str(0)
"

